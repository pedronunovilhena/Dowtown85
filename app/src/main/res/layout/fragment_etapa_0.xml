<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pedronunovilhena.dowtown80.Etapa_0$PlaceholderFragment"
    android:id="@+id/answer1"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
        <Button
            android:text="MAP"
            android:id="@+id/mapBtn"
            android:layout_height="100dp"
            android:layout_width="180dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/missionTxt"
            android:layout_toEndOf="@+id/missionTxt"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="30dp"
            android:onClick="showMap"
            android:layout_weight="0.43" />
            <Button
                android:text="HELP"
                android:id="@+id/HelpBtn"
                android:layout_height="100dp"
                android:layout_width="180dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/missionTxt"
                android:layout_toEndOf="@+id/missionTxt"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="30dp"
                android:onClick="showHelp"
                android:layout_weight="0.64" />
        </LinearLayout>

   </LinearLayout>

    <TextView android:text="@string/mission1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/missionTxt"
        android:textSize="25sp"
        android:layout_weight="0.52" />

    <Button
        android:layout_width="145dp"
        android:layout_height="80dp"
        android:text="Ok"
        android:textSize="30dp"
        android:id="@+id/okBtn"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/missionTxt"
        android:layout_toEndOf="@+id/missionTxt"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_marginBottom="1dp"
        android:onClick="submitAnswer"
        android:layout_gravity="right"
        android:layout_weight="0.16" />

    <EditText
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/okBtn"
        android:textSize="25sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</LinearLayout>
